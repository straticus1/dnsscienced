; BIND zone file for example.org
$ORIGIN example.org.
$TTL 3600

; SOA Record
@    IN  SOA  ns1.example.org. hostmaster.example.org. (
                 2024010100  ; Serial
                 7200        ; Refresh (2 hours)
                 3600        ; Retry (1 hour)
                 1209600     ; Expire (2 weeks)
                 3600 )      ; Negative TTL (1 hour)

; Nameservers
     IN  NS   ns1.example.org.
     IN  NS   ns2.example.org.

; Apex records
@    IN  A    198.51.100.1
@    IN  AAAA 2001:db8:100::1
@    IN  MX   10 mail1.example.org.
@    IN  MX   20 mail2.example.org.
@    IN  TXT  "v=spf1 mx -all"

; Web server
www  IN  A    198.51.100.10
www  IN  A    198.51.100.11
www  IN  AAAA 2001:db8:100::10

; FTP is an alias
ftp  IN  CNAME www.example.org.

; Mail servers
mail1  IN  A    198.51.100.20
mail1  IN  AAAA 2001:db8:100::20
mail2  IN  A    198.51.100.21

; Nameserver glue
ns1  IN  A    198.51.100.53
ns1  IN  AAAA 2001:db8:100::53
ns2  IN  A    198.51.100.54

; DMARC record
_dmarc  IN  TXT  "v=DMARC1; p=quarantine; rua=mailto:dmarc@example.org"

; SIP service
_sip._tcp  IN  SRV  10 60 5060 sip1.example.org.
_sip._tcp  IN  SRV  10 40 5060 sip2.example.org.

; Wildcard
*  IN  A  198.51.100.100
